<%- include ("../partials/header") -%>
<div class="container">
<div class="row">
<h1 style="text-align:center";>Create a New Campground</h1>
<div style="width:30%; margin: 30px auto;">
<form action = "/campgrounds" method = "POST">
<div class="form-group">
<input class="form-control" type = "text" name = "name" placeholder = "Enter a name">
</div>
<div class="form-group">
<input class="form-control" type = "number" name = "price" placeholder = "Enter a price" min="0.01" step=".01">
</div>
<div class="form-group">
<input class="form-control" type = "text" name = "img" placeholder = "Enter a url">
</div>
<div class="form-group">
	<input class="form-control" type="textarea" name="description" placeholder="Enter description">
</div>
<div class="form-group">
<button class = "btn  btn-lg btn-primary btn-block">Submit</button>
</div>
</form>
<a href="/campgrounds">Go Back</a>
</div>
</div>
</div>
<%- include ("../partials/footer") -%>