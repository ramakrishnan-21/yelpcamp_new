<%- include ("../partials/header") -%>
<div class="container">
<header class="jumbotron ">
<h1>Welcome to YelpCamp!</h1>
<p>View our handpicked camp grounds from all over the world</p>
<p>
<a class="btn btn-primary btn-large" href="/campgrounds/new">Add New Campground</a>
</p>
</header>
<div class="row container text-center" style="display:flex; flex-wrap:wrap;">
 <% campgrounds.forEach(function(camp){ %>
	<div class = "col-md-3 col-sm-6">
		<div class = "thumbnail">
			<img src="<%= camp.image %>">
		    <div class="caption">  
	        	<h4><%= camp.name %></h4>
	    	</div>
	<a href="/campgrounds/<%= camp._id %>" class="btn btn-primary">More Info</a>
	    </div>
	</div>
<% }); %>
</div>
</div>
<%- ("include ../partials/footer") -%>